# Samokoder Environment Configuration
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# API Encryption
API_ENCRYPTION_KEY=your-32-char-encryption-key
API_ENCRYPTION_SALT=your-salt

# System API Keys (fallback for demo)
SYSTEM_OPENROUTER_KEY=your-openrouter-key
SYSTEM_OPENAI_KEY=your-openai-key
SYSTEM_ANTHROPIC_KEY=your-anthropic-key
SYSTEM_GROQ_KEY=your-groq-key

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Storage
MAX_FILE_SIZE_MB=50
EXPORT_STORAGE_PATH=./exports
WORKSPACE_STORAGE_PATH=./workspaces

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_AUTH_MAX_REQUESTS=10
RATE_LIMIT_AUTH_WINDOW_SECONDS=60
RATE_LIMIT_API_MAX_REQUESTS=100
RATE_LIMIT_API_WINDOW_SECONDS=60
RATE_LIMIT_AI_MAX_REQUESTS=20
RATE_LIMIT_AI_WINDOW_SECONDS=60

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (for migrations)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=samokoder
DATABASE_USER=postgres
DATABASE_PASSWORD=password
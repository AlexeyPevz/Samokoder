{
  "dashboard": {
    "id": null,
    "title": "Samokoder - Golden Signals Dashboard",
    "tags": ["samokoder", "golden-signals", "sre"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Golden Signals Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "samokoder:api_response_time_p95",
            "legendFormat": "API Latency P95"
          },
          {
            "expr": "samokoder:requests_per_second",
            "legendFormat": "Traffic (RPS)"
          },
          {
            "expr": "samokoder:error_rate * 100",
            "legendFormat": "Error Rate %"
          },
          {
            "expr": "samokoder:cpu_usage_percent",
            "legendFormat": "CPU Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Latency - API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "samokoder:api_response_time_p95",
            "legendFormat": "P95"
          },
          {
            "expr": "samokoder:api_response_time_p99",
            "legendFormat": "P99"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "min": 0,
            "max": 2
          }
        ],
        "thresholds": [
          {
            "value": 0.5,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          },
          {
            "value": 1.0,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 3,
        "title": "Traffic - Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "samokoder:requests_per_second",
            "legendFormat": "RPS"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 100,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          },
          {
            "value": 500,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Errors - Error Rate",

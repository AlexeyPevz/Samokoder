        "targets": [
          {
            "expr": "samokoder:error_rate * 100",
            "legendFormat": "Error Rate %"
          },
          {
            "expr": "samokoder:exception_rate * 100",
            "legendFormat": "Exception Rate %"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate (%)",
            "min": 0,
            "max": 10
          }
        ],
        "thresholds": [
          {
            "value": 1,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          },
          {
            "value": 5,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
